{
  "name": "perpetualthis",
  "type": "module",
  "version": "0.1.0",
  "description": "A perpetual contract on BCH",
  "author": "StrungSafe",
  "license": "MIT",
  "scripts": {
    "run:service": "node ./index.js",
    "build": "yarn && yarn build:perpetual && yarn build:tokens && yarn build:client",
    "build:perpetual": "cashc ./contracts/perpetual.cash --output ./art/perpetual.json",
    "build:tokens": "cashc ./contracts/perpetual_tokens.cash --output ./art/perpetual_tokens.json",
    "build:client": "cashc ./contracts/perpetual_tokens.cash --output ./client/src/perpetual_tokens.json",
    "test": "yarn build && yarn test:all",
    "test:all": "yarn test:perpetual && yarn test:tokens",
    "test:perpetual": "node ./tests/perpetual.tests.js",
    "test:tokens": "node ./tests/perpetual_tokens.tests.js"
  },
  "dependencies": {
    "cashc": "0.13.0-next.1",
    "cashscript": "0.13.0-next.1"
  }
}
